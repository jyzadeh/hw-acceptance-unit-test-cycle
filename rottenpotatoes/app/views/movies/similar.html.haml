%h1 Movies Directed By #{@director}
%table#movies
    %thead
        %tr
            %th Movied Title
            %th Rating
            %th Release Date
            %th Director
            %th More Info
    %tbody
        - @movies.each do |movie|
            %tr
                %td= movie.title
                %td= movie.rating
                %td= movie.release_date
                %td= movie.director
                %td= link_to "More info about #{movie.title}", movie_path(movie)